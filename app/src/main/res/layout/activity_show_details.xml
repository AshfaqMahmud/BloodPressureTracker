<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171616"
    tools:context=".ShowDetails">

    <TextView
        android:id="@+id/systole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/diastole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/systole"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/bpm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diastole"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bpm"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <Button
        android:id="@+id/updatebtn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/comment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFEB3B"
        android:fontFamily="@font/baloo_bhaijaan"
        android:padding="10dp"
        android:text="Update"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/dltbtn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/updatebtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF0000"
        android:fontFamily="@font/baloo_bhaijaan"
        android:padding="10dp"
        android:text="Delete"
        android:textColor="@color/black"
        android:textSize="18sp" />
</RelativeLayout>