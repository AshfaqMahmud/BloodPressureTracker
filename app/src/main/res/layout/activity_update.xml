<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#00B8D4"
    tools:context=".Update">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/lexend_deca"
        android:paddingStart="10dp"
        android:text="Update Values"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/systole"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:background="@drawable/custom_bg"
        android:ems="10"
        android:fontFamily="@font/lexend_deca"
        android:hapticFeedbackEnabled="false"
        android:hint="@string/systolic"
        android:inputType="number"
        android:minHeight="50dp"
        android:paddingStart="10dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/diastole"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/systole"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:background="@drawable/custom_bg"
        android:ems="10"
        android:fontFamily="@font/lexend_deca"
        android:hapticFeedbackEnabled="false"
        android:hint="Diastolic"
        android:inputType="number"
        android:minHeight="50dp"
        android:paddingStart="10dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/bpm"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/diastole"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:background="@drawable/custom_bg"
        android:ems="10"
        android:fontFamily="@font/lexend_deca"
        android:hapticFeedbackEnabled="false"
        android:hint="BPM"
        android:inputType="number"
        android:minHeight="50dp"
        android:paddingStart="10dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/bpm"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:background="@drawable/custom_bg"
        android:ems="10"
        android:fontFamily="@font/lexend_deca"
        android:hapticFeedbackEnabled="false"
        android:hint="Comment"
        android:inputType="text"
        android:minHeight="50dp"
        android:paddingStart="10dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/update"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@+id/comment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#64DD17"
        android:fontFamily="@font/lexend_deca"
        android:padding="10dp"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/view"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@+id/update"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFE57F"
        android:fontFamily="@font/lexend_deca"
        android:padding="10dp"
        android:text="@string/view"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/showDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/lexend_deca"
        android:text="@string/date"
        android:textSize="16sp" />


</RelativeLayout>