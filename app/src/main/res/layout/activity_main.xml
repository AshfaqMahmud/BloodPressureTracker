<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/lexend_deca"
        android:padding="10dp"
        android:text="Insert Record"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/systole"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:background="@drawable/custom_bg"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/lexend_deca"
        android:hapticFeedbackEnabled="false"
        android:hint="@string/systolic"
        android:inputType="number"
        android:minHeight="50dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/common_google_signin_btn_text_light_disabled"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/diastole"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/systole"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:background="@drawable/custom_bg"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/lexend_deca"
        android:hapticFeedbackEnabled="false"
        android:hint="Diastolic"
        android:inputType="number"
        android:minHeight="50dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/common_google_signin_btn_text_light_disabled"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/bpm"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/diastole"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:background="@drawable/custom_bg"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/lexend_deca"
        android:hapticFeedbackEnabled="false"
        android:hint="BPM"
        android:inputType="number"
        android:minHeight="50dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/common_google_signin_btn_text_light_disabled"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/bpm"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:background="@drawable/custom_bg"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/lexend_deca"
        android:hapticFeedbackEnabled="false"
        android:hint="Comment"
        android:inputType="text"
        android:minHeight="50dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/common_google_signin_btn_text_light_disabled"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_btn_bg"
        android:fontFamily="@font/lexend_deca"
        android:padding="10dp"
        android:text="@string/add"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_btn_bg2"
        android:fontFamily="@font/lexend_deca"
        android:padding="10dp"
        android:text="@string/view"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/showDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/lexend_deca"
        android:text="@string/date"
        android:textSize="16sp" />


</RelativeLayout>